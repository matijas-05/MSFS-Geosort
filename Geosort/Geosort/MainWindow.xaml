<Window x:Class="Geosort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geosort"
        xmlns:gs="clr-namespace:Geosort.Controls"
        mc:Ignorable="d"
        Title="Geosort" Height="950" Width="1250">
    <DockPanel Margin="3">
        <!-- Choose addon folder -->
        <Label Padding="1,0,0,3" FontWeight="Bold" DockPanel.Dock="Top">Choose addon folder:</Label>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="400" Width="Auto" />
                <ColumnDefinition Width="125" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- 1st row -->
            <gs:FilePicker x:Name="addonFolderPicker" Grid.Column="0" Grid.Row="0" Margin="0 0 10 0" IsFolderPicker="True" OnFilePicked="addonFolderPicker_OnFilePicked"/>
            <Button x:Name="loadBtn" Grid.Column="1" Grid.Row="0" Click="LoadBtn_Click" Height="20">1. Load</Button>

        </Grid>

        <!-- Sort settings -->
        <StackPanel DockPanel.Dock="Top">
            <Label Margin="0 10 0 0" Padding="1,0,0,3" FontWeight="Bold">Sort by:</Label>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0">
                <CheckBox x:Name="sortContinent" Margin="0 0 10 0" VerticalAlignment="Center">Continent</CheckBox>
                <CheckBox x:Name="sortCountry" Margin="0 0 10 0" VerticalAlignment="Center">Country</CheckBox>
                <CheckBox x:Name="sortUS_State" Margin="0 0 10 0" VerticalAlignment="Center">US State</CheckBox>

                <Button x:Name="sortBtn" Grid.Column="1" Grid.Row="1" Width="125" Click="SortBtn_Click">2. Sort</Button>
            </StackPanel>
        </StackPanel>

        <!-- Addon list -->
        <Label x:Name="addonLabel" Margin="0 10 0 0" Padding="1,0,0,3" FontWeight="Bold" DockPanel.Dock="Top">Addons (0):</Label>
        <StackPanel Margin="0 0 0 2.5" Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBox x:Name="searchFilter" Width="300" HorizontalAlignment="Left" DockPanel.Dock="Top" VerticalContentAlignment="Center" TextChanged="searchFilter_TextChanged" KeyDown="searchFilter_KeyDown"/>
            <Button x:Name="searchBtn" Margin="5 0 0 0" Width="75" Click="searchBtn_Click">Search</Button>
        </StackPanel>
        <ListView x:Name="addonList" ScrollViewer.VerticalScrollBarVisibility="Visible" GridViewColumnHeader.Click="addonList_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="400" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Path" Width="710" DisplayMemberBinding="{Binding Path}" />
                    <GridViewColumn Header="Size" Width="90" DisplayMemberBinding="{Binding Size}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
