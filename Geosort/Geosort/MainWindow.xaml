<Window x:Class="Geosort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geosort"
        xmlns:gs="clr-namespace:Geosort.Controls"
        mc:Ignorable="d"
        Title="Geosort" Height="950" Width="1500">
    <DockPanel Margin="3">
        <Label Padding="1,0,0,3" FontWeight="Bold" DockPanel.Dock="Top">Choose addon folder:</Label>

        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="125" />
                <ColumnDefinition Width="125" />
            </Grid.ColumnDefinitions>

            <gs:FilePicker x:Name="addonFolderPicker" Grid.Column="0" Margin="0 0 10 0" IsFolderPicker="True" OnFilePicked="addonFolderPicker_OnFilePicked"/>
            <Button Name="loadBtn" Grid.Column="1" Click="LoadBtn_Click">Load</Button>
            <Button Name="sortBtn" Grid.Column="2" Margin="10 0 0 0" Click="SortBtn_Click">Sort</Button>
        </Grid>

        <Label Name="addonLabel" Margin="0 10 0 0" Padding="1,0,0,3" FontWeight="Bold" DockPanel.Dock="Top">Addons (0):</Label>
        <ListView Name="addonList" ScrollViewer.VerticalScrollBarVisibility="Visible" GridViewColumnHeader.Click="addonList_Click">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="400" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Path" Width="950" DisplayMemberBinding="{Binding Path}"/>
                    <GridViewColumn Header="Size" Width="95" DisplayMemberBinding="{Binding Size}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
