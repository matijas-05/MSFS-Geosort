<UserControl x:Class="Geosort.Controls.FilePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Geosort.Controls"
             mc:Ignorable="d" d:DesignWidth="232" d:DesignHeight="18.667">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="17" />
        </Grid.ColumnDefinitions>
        <TextBox Name="pathBox" Grid.Column="0" VerticalContentAlignment="Center" TextChanged="pathBox_TextChanged"/>
        <Button Grid.Column="1" Margin="-1 0 0 0" Click="Button_Click">...</Button>
    </Grid>
</UserControl>
